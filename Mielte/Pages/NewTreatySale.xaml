            <Label Content="менеджер:" VerticalAlignment="Bottom" Height="45" VerticalContentAlignment="Center" Padding="15,0,15,1" FontSize="16" FontFamily="Arial" FontStyle="Italic" FontWeight="Normal" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="0,0,0,45" Width="125"/>
