            <TextBox HorizontalAlignment="Stretch" Margin="485,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="26" VerticalContentAlignment="Center" Padding="5,0,10,0" FontFamily="Arial" FontSize="14" FontStyle="Italic" FontWeight="Normal" TextDecorations="{x:Null}" BorderThickness="0,1,0,1"/>
